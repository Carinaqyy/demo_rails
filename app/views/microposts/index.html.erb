<p style="color: green"><%= notice %></p>

<h1>Microposts</h1>

<div id="microposts">
  <% @microposts.each do |micropost| %>
    <%= render micropost %>
    <p>
    <% if defined?(@user) %>
      <%= link_to "Show this micropost", user_micropost_path(@user, micropost) %>
    <% else %>
      <%= link_to "Show this micropost", micropost %>
    <% end %>
    </p>
  <% end %>
</div>

<h2> Make New Micropost </h2>
<% if defined?(@user) %>
  <%= link_to "New micropost", new_user_micropost_path(@user) %>
<% else %>
  <%= link_to "New micropost", new_micropost_path %>
<% end %>